<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelManagement"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="HotelManagement.BookingWindows"
        mc:Ignorable="d"
        Title="BookingWindows" Height="732.387" Width="872.541">
    <StackPanel>
        <!--Title && Button regulations-->
        <Grid Height="48" Margin="0,0,65,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <!--title-->
            <Border Grid.Column="0" Background="White" CornerRadius="12" HorizontalAlignment="Left" Margin="8,4,4,0">
                <TextBlock Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" 
                    Text="  List Room:  " Margin="8" FontSize="20" FontWeight="Bold" Foreground="#FF009EAE" RenderTransformOrigin="0.485,0.787"/>
            </Border>
            <!--button-->
            <Grid Grid.Column="1">
                <Button Width="126" Height="38" HorizontalAlignment="Right" Margin="0,4,8,0"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    materialDesign:ButtonAssist.CornerRadius="10"
                    ToolTip="MaterialDesignRaisedButton with Round Corners" Background="#FF009EAE" BorderBrush="#FF8ABCC1">
                    <TextBlock
                        Text="Regulations" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
            </Grid>
        </Grid>
        <Border Background="White" CornerRadius="12" HorizontalAlignment="Stretch" Margin="5,249,38,-347" Height="187">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <!--title of create room container-->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="83*"/>
                        <ColumnDefinition Width="191*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" 
                            Text="Info Customer" Margin="0,55,0,23" FontSize="16" FontWeight="Bold" Foreground="#FF009EAE"/>
                </Grid>
                <!--room info-->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>
                    <!--Room ID + Room Type-->
                    <Grid Grid.Column="0" Margin="8,4,4,4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBox Grid.Row="0" x:Name="tbRoomId" Text="Automatically Generated" Foreground="#FF009EAE"
                                materialDesign:HintAssist.Hint="Room ID:" FontSize="14" IsReadOnly="True"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                VerticalAlignment="Center" CaretBrush="White" />
                        <Grid Grid.Row="1" VerticalAlignment="Center" Margin="0,12,0,0">
                            <ComboBox x:Name="cbbGender" 
                                    FontSize="14" Foreground="#FF009EAE"
                                    materialDesign:TextFieldAssist.PrefixText="Gender: "
                                    SelectedValue="{Binding Type}"
                                    IsEditable="False">
                                <ComboBoxItem>Male</ComboBoxItem>
                                <ComboBoxItem>Female</ComboBoxItem>
                                <ComboBoxItem>Other</ComboBoxItem>

                            </ComboBox>
                        </Grid>
                    </Grid>
                    <!--Room Name + Price/Day-->
                    <Grid Grid.Column="1" Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBox Grid.Row="0" x:Name="tbName" Foreground="#FF009EAE" Text="{Binding RName}"
                                materialDesign:HintAssist.Hint="Name:" FontSize="14"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                VerticalAlignment="Center" />
                        <TextBox Grid.Row="1" x:Name="tbPhone" Foreground="#FF009EAE" Text="{Binding Price}"
                                materialDesign:HintAssist.Hint="Phone number:" FontSize="14" IsReadOnly="True"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                    </Grid>
                    <!--Notes + Max People-->
                    <Grid Grid.Column="2" Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBox Grid.Row="0" x:Name="tbIdNumber" Foreground="#FF009EAE" Text="{Binding Notes}"
                                materialDesign:HintAssist.Hint="Citizen ID:" FontSize="14"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                VerticalAlignment="Center" />
                        <TextBox Grid.Row="1" x:Name="tbAddress" Foreground="#FF009EAE" Text="{Binding MaxPeople}"
                                materialDesign:HintAssist.Hint="Address:" FontSize="14" IsReadOnly="True"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                    </Grid>
                    <!--Button AddRoom-->
                    <Grid Grid.Column="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btAddRoom" Background="#FF009EAE" Margin="9,21,9,9"
                                Width="62" Height="62" Command="{Binding AddRoom}"
                                IsEnabled="{Binding IsEnabled}"
                                materialDesign:ButtonAssist.CornerRadius="31"
                                ToolTip="Click to add room" BorderBrush="#FF8ABCC1" Grid.ColumnSpan="2">
                            <materialDesign:PackIcon
                                    Kind="Plus" Width="45" Height="45" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Button>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
        <!--Add room-->
        <!--Search box-->
    </StackPanel>
</Window>
