<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelManagement"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:View="clr-namespace:HotelManagement.MVVM.View" x:Class="HotelManagement.BookingWindows"
        mc:Ignorable="d"
        Title="BookingWindows" Height="732.387" Width="872.541" WindowStyle="None">
    <StackPanel Margin="0,0,2,2">
        <Border Background="White" CornerRadius="12" Margin="0" Height="68">
            <Grid Margin="0,0,19,10" MinHeight="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Content="Check-in date:" Margin="10,-3,292,0" Foreground="#FF009EAE" BorderBrush="#FF009EAE" FontSize="18" FontFamily="Calibri" VerticalContentAlignment="Bottom" Height="43" VerticalAlignment="Top"/>
                <DatePicker VerticalAlignment="Stretch" Margin="134,6,62,18" Foreground="#FF009EAE" BorderBrush="#FF009EAE"/>
                <Label Content="Check-out date:" Margin="34,10,259,0" Foreground="#FFB45609" BorderBrush="#FF009EAE" FontSize="18" FontFamily="Calibri" Grid.Column="1" Height="30" VerticalAlignment="Top"/>
                <DatePicker VerticalAlignment="Stretch" Margin="139,6,0,18" Foreground="#FFB45609" BorderBrush="#FFB45609" FontWeight="Bold" Grid.Column="1" Width="226"/>
            </Grid>
        </Border>
        <StackPanel CanVerticallyScroll="True" Orientation="Horizontal" Panel.ZIndex="-3" CanHorizontallyScroll="True"/>
        <Border Background="White" CornerRadius="12" Margin="0" Height="150">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <!--title of create room container-->
                <!--room info-->
                <Grid Margin="0,18,0,36">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>
                    <!--Room ID + Room Type-->
                    <Grid Grid.Column="0" Margin="8,4,4,4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBox Grid.Row="0" x:Name="tbRoomId" Text="Automatically Generated" Foreground="#FF009EAE"
                                materialDesign:HintAssist.Hint="Room ID:" FontSize="14" IsReadOnly="True"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                VerticalAlignment="Center" CaretBrush="White" />
                        <Grid Grid.Row="1" VerticalAlignment="Center" Margin="0,12,0,0">
                            <ComboBox x:Name="cbbGender" 
                                    FontSize="14" Foreground="#FF009EAE"
                                    materialDesign:TextFieldAssist.PrefixText="Gender: "
                                    SelectedValue="{Binding Type}"
                                    IsEditable="False">
                                <ComboBoxItem Content="Male"/>
                                <ComboBoxItem Content="Female"/>
                                <ComboBoxItem Content="Other"/>

                            </ComboBox>
                        </Grid>
                    </Grid>
                    <!--Room Name + Price/Day-->
                    <Grid Grid.Column="1" Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBox Grid.Row="0" x:Name="tbName" Foreground="#FF009EAE" Text="{Binding RName}"
                                materialDesign:HintAssist.Hint="Name:" FontSize="14"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                VerticalAlignment="Center" />
                        <TextBox Grid.Row="1" x:Name="tbPhone" Foreground="#FF009EAE" Text="{Binding Price}"
                                materialDesign:HintAssist.Hint="Phone number:" FontSize="14" IsReadOnly="True"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                    </Grid>
                    <!--Notes + Max People-->
                    <Grid Grid.Column="2" Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBox Grid.Row="0" x:Name="tbIdNumber" Foreground="#FF009EAE" Text="{Binding Notes}"
                                materialDesign:HintAssist.Hint="Citizen ID:" FontSize="14"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                VerticalAlignment="Center" />
                        <TextBox Grid.Row="1" x:Name="tbAddress" Foreground="#FF009EAE" Text="{Binding MaxPeople}"
                                materialDesign:HintAssist.Hint="Address:" FontSize="14" IsReadOnly="True"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                    </Grid>
                    <!--Button AddRoom-->
                    <Grid Grid.Column="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btAddRoom" Background="#FF009EAE" Margin="9,21,9,9"
                                Width="62" Height="62" Command="{Binding AddRoom}"
                                IsEnabled="{Binding IsEnabled}"
                                materialDesign:ButtonAssist.CornerRadius="31"
                                ToolTip="Click to add room" BorderBrush="#FF8ABCC1" Grid.ColumnSpan="2">
                            <materialDesign:PackIcon
                                    Kind="Plus" Width="45" Height="45" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Button>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
        <Grid Height="78" Margin="0,44,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <!--title-->
            <Border Grid.Column="0" Background="White" CornerRadius="12" HorizontalAlignment="Left" Margin="8,4,4,0"/>
            <!--button-->
            <Grid>
                <Button Width="148" Height="Auto" HorizontalAlignment="Right" Margin="0,12,44,18"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    materialDesign:ButtonAssist.CornerRadius="10"
                    ToolTip="MaterialDesignRaisedButton with Round Corners" Background="#FFC98362" BorderBrush="#FF8ABCC1" Click="Button_Click">
                    <TextBlock
                        Text="Cancel" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
                <Button Width="146" Height="Auto" HorizontalAlignment="Right" Margin="0,12,233,18"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    materialDesign:ButtonAssist.CornerRadius="10"
                    ToolTip="MaterialDesignRaisedButton with Round Corners" Background="#FF009EAE" BorderBrush="#FF8ABCC1">
                    <TextBlock
                        Text="Booking" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
            </Grid>
        </Grid>
        <!--Add room-->
        <!--Search box-->
    </StackPanel>
</Window>
