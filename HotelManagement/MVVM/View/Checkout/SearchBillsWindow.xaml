<Window x:Class="HotelManagement.MVVM.View.SearchBillsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:HotelManagement.MVVM.View"
        mc:Ignorable="d"
        Title="SearchBillsWindow" Height="675" Width="1080"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="#f4f5f7"
        
        FontFamily="{DynamicResource MaterialDesignFont}" MinWidth="1080" MinHeight="675" MaxWidth="1080" MaxHeight="675" Activated="Window_Activated">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="305*"/>
            <ColumnDefinition Width="232*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Margin="0,0,0.6,-0.4">
            <Grid.RowDefinitions>
                <RowDefinition Height="71*"/>
                <RowDefinition Height="318*"/>
                <RowDefinition Height="60*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,10,4.2">
                <Border Grid.Row="1" Background="Transparent" Visibility="{Binding Visibility}">
                    <Border Background="White" Height="46" CornerRadius="12" HorizontalAlignment="Stretch" Margin="4">
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Image Source="/Images/search.png" Width="25" Stretch="Uniform"></Image>
                            <TextBlock Grid.Column="1" Margin="3.4,4,-0.4,4" Text="Search name..." FontWeight="Bold" VerticalAlignment="Center" Foreground="LightGray">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=searchRoom}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Setter Property="FontSize" Value="14"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBox Grid.Column="1" Width="620" x:Name="searchRoom" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Center" BorderThickness="0"></TextBox>
                        </Grid>
                    </Border>
                </Border>
            </Grid>


            <Grid Grid.Row="1" Margin="0,0.8,0,59.6" Grid.RowSpan="2">
                <ListView x:Name="lv_bills" Margin="10,-8,9.8,0.2" >
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Bill ID" x:Name="billID" Width="auto" />
                            <GridViewColumn Header="Client" x:Name="clientName" Width="auto" />
                            <GridViewColumn Header="Identity Card" x:Name="id_card" Width="auto" />
                            <GridViewColumn Header="Phone" x:Name="phone" Width="Auto" />
                            <GridViewColumn Header="Check Out" x:Name="checkout" Width="Auto" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>

            <Grid Grid.Row="2">
                <Button
                        x:Name="btnEditSurcharge"
                        Margin="10,36,444.8,10.4"
                        Height="40"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        BorderThickness="0"
                        Background="#FFFE8704"
                        Foreground="White"
                        ToolTip="">
                    <Grid Width="auto">
                        <TextBlock 
                                FontSize="18"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                Text="Print Bill" Margin="0,0,0,0"/>
                    </Grid>
                </Button>
            </Grid>
        </Grid>

        <Grid Background="#FEB865" Margin="6.4,0,-0.4,-0.4" Grid.Column="1">
            <Label Content="BILL INFORMATION:" HorizontalAlignment="Left" Height="31" Margin="3,3,0,0" VerticalAlignment="Top" Width="243" FontWeight="Bold" FontSize="20"/>
            <Label Content="CLIENT INFORMATION:" HorizontalAlignment="Left" Height="31" Margin="4,79,0,0" VerticalAlignment="Top" Width="243" FontWeight="Bold" FontSize="20" RenderTransformOrigin="0.447,-1.035"/>
            <TextBox x:Name="tb_bill_id" FontSize="14" IsReadOnly="True"
                materialDesign:HintAssist.Hint="Bill ID"  Foreground="Black"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10,24,242,579"/>
            <TextBox x:Name="tb_booking_id" FontSize="14" IsReadOnly="True"
                materialDesign:HintAssist.Hint="Booking ID"  Foreground="Black"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="234,24,13,579"/>
            <TextBox x:Name="tb_client_name" FontSize="14" IsReadOnly="True"
                materialDesign:HintAssist.Hint="Name"  Foreground="Black"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10,107,241,495"/>
            <TextBox x:Name="tb_gender" FontSize="14" IsReadOnly="True"
                materialDesign:HintAssist.Hint="Gender"  Foreground="Black"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="234,107,13,495"/>
            <TextBox x:Name="tb_address" FontSize="14" IsReadOnly="True"
                materialDesign:HintAssist.Hint="Address"  Foreground="Black"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10,151,13,451"/>
            <TextBox x:Name="tb_cmnd" FontSize="14" IsReadOnly="True"
                materialDesign:HintAssist.Hint="Identity Card Namber"  Foreground="Black"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10,194,14,407"/>
            <TextBox x:Name="tb_phone" FontSize="14" IsReadOnly="True"
                materialDesign:HintAssist.Hint="Phone Number"  Foreground="Black"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10,238,242,364"/>
            <TextBox x:Name="tb_client_type" FontSize="14" IsReadOnly="True"
                materialDesign:HintAssist.Hint="Client Type"  Foreground="Black"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="233,238,14,364"/>
            <Label Content="RENTAL INFORMATION:" HorizontalAlignment="Left" Height="31" Margin="6,287,0,0" VerticalAlignment="Top" Width="243" FontWeight="Bold" FontSize="20" RenderTransformOrigin="0.447,-1.035"/>
            <TextBox x:Name="tb_room_id" FontSize="14" IsReadOnly="True"
                materialDesign:HintAssist.Hint="Room ID"  Foreground="Black"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10,314,237,288"/>
            <TextBox x:Name="tb_room_name" FontSize="14" IsReadOnly="True"
                materialDesign:HintAssist.Hint="Room Name"  Foreground="Black"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="238,314,9,288"/>
            <TextBox x:Name="tb_room_type" FontSize="14" IsReadOnly="True"
                materialDesign:HintAssist.Hint="Room Type"  Foreground="Black"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10,358,237,244"/>
            <TextBox x:Name="tb_unit_price" FontSize="14" IsReadOnly="True"
                materialDesign:HintAssist.Hint="Unit Price"  Foreground="Black"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="239,358,9,244"/>
            <TextBox x:Name="tb_surcharge" FontSize="14" IsReadOnly="True"
                materialDesign:HintAssist.Hint="Surcharge"  Foreground="Black"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="240,490,8,113"/>
            <TextBox x:Name="tb_client_number" FontSize="14" IsReadOnly="True"
                materialDesign:HintAssist.Hint="Client Number"  Foreground="Black"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="335,402,10,200"/>
            <TextBox x:Name="tb_days" FontSize="14" IsReadOnly="True"
                materialDesign:HintAssist.Hint="Days"  Foreground="Black"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="240,402,128,200"/>
            <TextBox x:Name="tb_checkin" FontSize="14" IsReadOnly="True"
                materialDesign:HintAssist.Hint="Check In"  Foreground="Black"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10,402,236,200"/>
            <TextBox x:Name="tb_checkout" FontSize="14" IsReadOnly="True"
                materialDesign:HintAssist.Hint="Check Out"  Foreground="Black"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10,447,237,157"/>
            <Label Content="TOTAL:" HorizontalAlignment="Left" Height="31" Margin="167,605,0,0" VerticalAlignment="Top" Width="241" FontWeight="Bold" FontSize="20" RenderTransformOrigin="0.447,-1.035"/>
            <TextBox x:Name="tb_total" FontSize="18" FontWeight="Bold" IsReadOnly="True"
                materialDesign:HintAssist.Hint=""  Foreground="Black"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="240,594,13,10"/>
            <TextBox x:Name="tb_subtotal" FontSize="14" IsReadOnly="True"
                materialDesign:HintAssist.Hint="Subtotal"  Foreground="Black"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="240,446,8,156"/>
            <TextBox x:Name="tb_Deposits" FontSize="14" IsReadOnly="True"
                materialDesign:HintAssist.Hint="Deposits"  Foreground="Black"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="240,532,8,71"/>


        </Grid>
    </Grid>
</Window>


