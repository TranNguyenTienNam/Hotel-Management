<Window x:Class="HotelManagement.MVVM.View.CheckOutViews.ExportBill"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelManagement.MVVM.View.CheckOutViews"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:viewmodel="clr-namespace:HotelManagement.MVVM.ViewModel" 
        d:DataContext="{d:DesignInstance Type=viewmodel:CheckOutViewModel}"
        mc:Ignorable="d"
        Title="ExportBill" 
        Height="600" Width="600"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow"
        >
    <Window.Background>
        <SolidColorBrush Color="Gainsboro"/>
    </Window.Background>
    <Grid x:Name="bill">
        <Grid Margin="0,0,-0.4,0.2" >
            <Grid.RowDefinitions>
                <RowDefinition Height="160"/>
                <RowDefinition Height="270"/>
                <RowDefinition Height="130"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <StackPanel Margin="10,0,0,0">
                        <Label Content="HOTEL NAME" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="25" FontWeight="Bold"/>
                        <Label Content="Address:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14"/>
                        <Label Content="Telephone:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14" />
                        <Label Content="Fax:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14" />
                    </StackPanel>
                </Grid>
                <Grid Grid.Column="1">
                    <StackPanel>
                        <Label Content="CLIENT INFOMANTION" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="25" FontWeight="Bold"/>
                        <Grid>
                            <Label Content="Name:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14"/>
                            <TextBlock FontSize="14" Text="{Binding TenKH}" Margin="120,0,9.8,0.4"/>
                        </Grid>

                        <Label Content="ID Card:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14" />
                        <Label Content="Address:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14" />
                        <Label Content="Telephone:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14" />
                    </StackPanel>
                </Grid>
            </Grid>
            <Grid Grid.Row="1" Margin="10,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <StackPanel>
                        <Label Content="RENTAL INFOMANTION" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="25" FontWeight="Bold"/>
                        <Label Content="Room:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14" />
                        <Label Content="Type:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14" />
                        <Label Content="Unit price:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14" />
                        <Label Content="Max people:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14" />
                    </StackPanel>

                </Grid>
                <Grid Grid.Column="1">
                    <StackPanel>
                        <Label Content="" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="25"/>
                        <Label Content="Check-in:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14"/>
                        <Label Content="Check-out:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14"/>
                        <Label Content="Rental days:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14"/>
                        <Label Content="Amount People:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14"/>
                        <Label Content="Subtotal:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14"/>
                        <Label Content="Surcharge:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14"/>
                        <Label Content="Deposits:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14"/>
                        <Label Content="TOTAL:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="25" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </Grid>
            <Grid Grid.Row="2">
                <StackPanel Margin="0,0,16.2,0.2">
                    <Label Content="Receptionnist" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="25" FontWeight="Bold"/>
                    <Label Content="Date of issue:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14"/>
                    <Label Content="Creater:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14"/>
                    <Label Content="Note: Bill to client (unpaid)!" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14"/>
                </StackPanel>
                <Button
                x:Name="btnPrint"
                Margin="510,0,0,-60"
                Height="50"
                Width="50"
                Style="{StaticResource MaterialDesignRaisedButton}"
                Command="{Binding PrintBillCommand}"
                materialDesign:ButtonAssist.CornerRadius="10"
                BorderThickness="0"
                Background="#F44336"
                Foreground="White"
                ToolTip="Print or export file" Click="btnPrint_Click"  >
                    <Grid Width="auto">
                        <Border>
                            <materialDesign:PackIcon Kind="Printer" Width="26" Height="26" Margin="-10,0,-9.6,-0.4"/>
                        </Border>
                    </Grid>
                </Button>
            </Grid>
        </Grid>

    </Grid>
</Window>
